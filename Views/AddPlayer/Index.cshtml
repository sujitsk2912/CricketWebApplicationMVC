@model IEnumerable<CricketWebApplicationMVC.Models.AddPlayerModel>

@{
    ViewData["Title"] = "Index";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-table@1.22.3/dist/bootstrap-table.min.css" rel="stylesheet">

<style>
    th{
        font-size:16px;
        font-weight:500;
    }

    .PlayerImg {
        text-align:center;
    }
</style>

<h2>Registered Players</h2>

<p>
    <a asp-action="AddPlayer">Add Player</a>
</p>

<table id="table" data-toggle="table" data-height="460" data-search="true" data-pagination="true">
    <thead>
        <tr>
            <th data-field="PlayerID">ID</th>
            <th data-field="PlayerName">Name</th>
            <th data-field="Born">Date of Birth</th>
            <th data-field="City">City</th>
            <th data-field="Age">Age</th>
            <th data-field="BattingStyle">Batting Style</th>
            <th data-field="BowlingStyle">Bowling Style</th>
            <th data-field="PlayingRole">Playing Role</th>
            <th data-field="Team">Team</th>
            <th data-field="PlayerImg">Image</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PlayerID</td>
                <td>@item.PlayerName</td>
                <td>@item.Born</td>
                <td>@item.City</td>
                <td>@item.Age</td>
                <td>@item.BattingStyle</td>
                <td>@item.BowlingStyle</td>
                <td>@item.PlayingRole</td>
                <td>@item.Team</td>
                <td class="PlayerImg">
                    <img src="~/PlayerImg/@item.PlayerImg" alt="Player Image" style="max-width: 100px; max-height: 100px;" />
                </td>
                <td>
                    <a href="@Url.Action("Edit", new { PlayerID = item.PlayerID })">Edit</a>
                    <a href="@Url.Action("Details", new { PlayerID = item.PlayerID })">Details</a>
                    <a href="@Url.Action("Delete", new { PlayerID = item.PlayerID })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap-table@1.22.3/dist/bootstrap-table.min.js"></script>
