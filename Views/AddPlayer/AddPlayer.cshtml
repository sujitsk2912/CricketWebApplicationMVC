@model CricketWebApplicationMVC.Models.AddPlayerModel

@{
    ViewData["Title"] = "AddPlayer";
}

<style>

    .row{
       place-content:center;
       padding:5px;
    }

    form{
        border-radius:10px;
        padding:15px;
    }
    .btn{
        width:90%;
    }

</style>

<body>
<center>
<h2>Add Players</h2>
</center>
<hr />

    <form asp-action="AddPlayer" method="post" enctype="multipart/form-data">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                <label asp-for="PlayerName" class="control-label">Player Name</label>
                <input asp-for="PlayerName" class="form-control" />
                <span asp-validation-for="PlayerName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                <label asp-for="Born" class="control-label">Born</label>
                <input type="date" asp-for="Born" class="form-control" />
                <span asp-validation-for="Born" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="City" class="control-label">City</label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                <label asp-for="Age" class="control-label">Age</label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                <label asp-for="BattingStyle" class="control-label">Batting Style</label>
                <select id="BattingStyle" asp-for="BattingStyle" class="form-control">
                    <option>Select</option>
                    <option value="Right-Handed Batsman">Right-Handed Batsman</option>
                    <option value="Left-Handed Batsman">Left-Handed Batsman</option>
                    <option value="Versatile Middle-order Batsman">Versatile Middle-order Batsman</option>
                    <option value="Aggressive Attacker">Aggressive Attacker</option>
                    <option value="Stylish Stroke-maker">Stylish Stroke-maker</option>
                    <option value="Solid Defender">Solid Defender</option>
                    <option value="Dynamic Power-hitter">Dynamic Power-hitter</option>
                    <option value="Innovative Shot-makers">Innovative Shot-makers</option>
                    <option value="Opening Dasher">Opening Dasher</option>
                    <option value="Finisher">Finisher</option>
                <span asp-validation-for="BattingStyle" class="text-danger"></span>
                </select>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                <label asp-for="BowlingStyle" class="control-label">Bowling Style</label>
                <select id="BowlingStyle" asp-for="BowlingStyle" class="form-control" >
                    <option>Select</option>
                    <option value="Right-arm Fast">Right-arm Fast</option>
                    <option value="Left-arm Fast">Left-arm Fast</option>
                    <option value="Right-arm Medium">Right-arm Medium</option>
                    <option value="Left-arm Medium">Left-arm Medium</option>
                    <option value="Right-arm Off-spin">Right-arm Off-spin</option>
                    <option value="Left-arm Orthodox Spin">Left-arm Orthodox Spin</option>
                    <option value="Right-arm Leg-spin">Right-arm Leg-spin</option>
                    <option value="Left-arm Chinaman">Left-arm Chinaman</option>
                    <option value="Right-arm Off-spin">Right-arm Off-spin</option>
                    <option value="Left-arm Spin">Left-arm Spin</option>
                    <option value="Medium-Fast Swing Bowler">Medium-Fast Swing Bowler</option>
                <span asp-validation-for="BowlingStyle" class="text-danger"></span>
                </select>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                <label asp-for="PlayingRole" class="control-label">Playing Role</label>
                <select id="PlayingRole" asp-for="PlayingRole" class="form-control" >
                    <option>Select</option>
                    <option value="Batsmen">Batsman</option>
                    <option value="Opener">Opener</option>
                    <option value="Middle-order Batsmen">Middle-order Batsmen</option>
                    <option value="Finisher">Finisher</option>
                    <option value="All-rounder">All-rounder</option>
                    <option value="Wicketkeeper">Wicketkeeper</option>
                    <option value="Fast Bowler">Fast Bowler</option>
                    <option value="Spin Bowler">Spin Bowler</option>
                    <option value="Captain">Captain</option>
                    <option value="Vice-Captain">Vice-Captain</option>
                <span asp-validation-for="PlayingRole" class="text-danger"></span>
                </select>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Team" class="control-label">Team</label>
                    <input asp-for="Team" class="form-control" />
                    <span asp-validation-for="Team" class="text-danger"></span>
                </div>
            </div>  
        </div>

        <div class="row"> 
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="PlayerImg" class="control-label">Player Image</label>
                        <input type="file" name="UploadFile" accept="image/png, image/jpg, image/jpeg, image/WEBP" id="PlayerImg" asp-for="PlayerImg" class="form-control" onchange="document.getElementById('blah').src = window.URL.createObjectURL(this.files[0])" />
                        <span asp-validation-for="PlayerImg" class="text-danger"></span>
                    </div>
                </div>
            <div class="col-md-4">
                <div class="form-group">
                    <img id="blah" alt="" height="150px" />
                </div>
            </div>
        </div>



        <div class="row">
            <div class="col-md-8">
                <div class="form-group">
                    <a asp-action="Index">Players List</a>
                </div>
            </div>
        </div>
    
        <div class="row">
            <div class="col-md-4">
                <div class="form-group" style="display:flex; justify-content:center">
                    <input type="submit" value="Add Player" class="btn btn-primary" />
                </div>
            </div>
        </div>

        </form>
   
   
       
</body>
@{
    var alertMessage = TempData["AlertMessage"] as string;
}

@if (!string.IsNullOrEmpty(alertMessage))
{
    <script>
        alert('@alertMessage');
    </script>

    <script>
        var loadFile = function (event) {
            var output = document.getElementById('output');
            output.src = URL.createObjectURL(event.target.files[0]);
            output.onload = function () {
                URL.revokeObjectURL(output.src) // free memory
            }
        };
    </script>
}


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
