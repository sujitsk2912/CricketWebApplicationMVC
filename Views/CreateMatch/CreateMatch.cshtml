@model CricketWebApplicationMVC.Models.CreateMatchModel

@{
    ViewData["Title"] = "CreateMatch";
}

<style>

    /* .control-label {
            font-weight:500;
            padding:3px;
        } */
    .row {
        place-content: center;
        padding: 5px;
    }
    /*   .col-md-4{
            padding:10px;
        } */
    form {
        border-radius: 10px;
        padding: 15px;
    }

    .btn {
        width: 90%;
    }

    .TeamLogo {
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover;
        height: 150px;
        border-radius: 5px;
    }
</style>

<body>
    <center>
        <h2>Create Match</h2>
    </center>
    <hr />

    <form asp-action="CreateMatch">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="TeamName" class="control-label">Team A</label>
                    <select id="TeamName" asp-for="TeamName" class="form-control">
                        <option>Select</option>
                        <option value="Right-Handed Batsman">Right-Handed Batsman</option>
                        <option value="Left-Handed Batsman">Left-Handed Batsman</option>
                        <option value="Versatile Middle-order Batsman">Versatile Middle-order Batsman</option>
                        <option value="Aggressive Attacker">Aggressive Attacker</option>
                        <option value="Stylish Stroke-maker">Stylish Stroke-maker</option>
                        <option value="Solid Defender">Solid Defender</option>
                        <option value="Dynamic Power-hitter">Dynamic Power-hitter</option>
                        <option value="Innovative Shot-makers">Innovative Shot-makers</option>
                        <option value="Opening Dasher">Opening Dasher</option>
                        <option value="Finisher">Finisher</option>
                        <span asp-validation-for="TeamName" class="text-danger"></span>
                    </select>
                    <div class="form-group" style="display:flex; justify-content:center; margin-top:20px">
                        <img class="TeamLogo" src="~/lib/view-soccer-gold-cup-field.jpg" />
                    </div>
                </div>
            </div><div class="col-md-2">
                <br />
                <div class="form-group" style="border:1px solid #CDD3D9; border-radius:5px; align-items:center; display:flex;justify-content:center">
                  <h5 style="place-items:center;padding-top:10px">V/S</h5>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="TeamName" class="control-label">Team B</label>
                    <select id="TeamName" asp-for="TeamName" class="form-control">
                        <option>Select</option>
                        <option value="Right-arm Fast">Right-arm Fast</option>
                        <option value="Left-arm Fast">Left-arm Fast</option>
                        <option value="Right-arm Medium">Right-arm Medium</option>
                        <option value="Left-arm Medium">Left-arm Medium</option>
                        <option value="Right-arm Off-spin">Right-arm Off-spin</option>
                        <option value="Left-arm Orthodox Spin">Left-arm Orthodox Spin</option>
                        <option value="Right-arm Leg-spin">Right-arm Leg-spin</option>
                        <option value="Left-arm Chinaman">Left-arm Chinaman</option>
                        <option value="Right-arm Off-spin">Right-arm Off-spin</option>
                        <option value="Left-arm Spin">Left-arm Spin</option>
                        <option value="Medium-Fast Swing Bowler">Medium-Fast Swing Bowler</option>
                        <span asp-validation-for="TeamName" class="text-danger"></span>
                    </select>
                    <div class="form-group" style="display:flex; justify-content:center; margin-top:20px">
                        <img class="TeamLogo" src="~/lib/view-soccer-gold-cup-field.jpg" />
                    </div>
                </div>
            </div>
        </div>
        <br /><br />

        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="MatchDateTime" class="control-label">Match DateTime</label>
                    <input type="datetime-local" asp-for="MatchDateTime" class="form-control" />
                    <span asp-validation-for="MatchDateTime" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="MatchType" class="control-label">Match Type</label>
                    <select id="MatchType" asp-for="MatchType" class="form-control">
                        <option>Select</option>
                        <option value="Right-arm Fast">Right-arm Fast</option>
                        <option value="Left-arm Fast">Left-arm Fast</option>
                        <option value="Right-arm Medium">Right-arm Medium</option>
                        <option value="Left-arm Medium">Left-arm Medium</option>
                    </select>
                    <span asp-validation-for="MatchType" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="BattingTeam" class="control-label">Batting Team</label>
                    <select id="BattingTeam" asp-for="BattingTeam" class="form-control">
                        <option>Select</option>
                        <option value="Right-arm Fast">Right-arm Fast</option>
                        <option value="Left-arm Fast">Left-arm Fast</option>
                        <option value="Right-arm Medium">Right-arm Medium</option>
                        <option value="Left-arm Medium">Left-arm Medium</option>
                    </select>
                    <span asp-validation-for="BattingTeam" class="text-danger"></span>
                </div>
            </div>
        </div>

        <br />
        <div class="row">
            <div class="col-md-4">
                <div class="form-group" style="display:flex; justify-content:center">
                    <input type="submit" value="Start Match" class="btn btn-primary" />
                </div>
            </div>
        </div>

    </form>


</body>

@{
    var alertMessage = TempData["AlertMessage"] as string;
}

@if (!string.IsNullOrEmpty(alertMessage))
{
    <script>
        alert('@alertMessage');
    </script>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
