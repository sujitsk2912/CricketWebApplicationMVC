@model CricketWebApplicationMVC.Models.FinishMatchModel

@{
    ViewData["Title"] = "FinishMatch";
}

<style>

    /* .control-label {
                    font-weight:500;
                    padding:3px;
                } */
    .row {
        place-content: center;
        padding: 5px;
    }
    /*   .col-md-4{
                    padding:10px;
                } */
    form {
        border-radius: 10px;
        padding: 15px;
    }

    .btn {
        width: 90%;
    }

    .TeamLogo {
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover;
        height: 150px;
        border-radius: 5px;
    }

</style>

<body>
    <center>
        <h2>Finish Match</h2>
    </center>
    <hr />

    <form asp-action="FinishMatch">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <input placeholder="Enter Match ID" asp-for="MatchID" class="form-control" />
                    <span asp-validation-for="MatchID" class="text-danger"></span>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="TeamName" class="control-label">Team A</label>
                    <input asp-for="TeamName" readonly class="form-control" />
                    <div class="form-group" style="display:flex; justify-content:center; margin-top:20px">
                        <img class="TeamLogo" src="~/lib/view-soccer-gold-cup-field.jpg" />
                    </div>
                </div>
            </div><div class="col-md-2">
                <br />
                <div class="form-group" style="border:1px solid #CDD3D9; border-radius:5px; align-items:center; display:flex;justify-content:center">
                    <h5 style="place-items:center;padding-top:10px">V/S</h5>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="TeamName" class="control-label">Team B</label>
                    <input asp-for="TeamName" readonly class="form-control" />
                    <div class="form-group" style="display:flex; justify-content:center; margin-top:20px">
                        <img class="TeamLogo" src="~/lib/view-soccer-gold-cup-field.jpg" />
                    </div>
                </div>
            </div>
        </div>
        <br /><br />

        <div class="row" style="background-color:aqua; height:40px;text-align:center">
            <div style="display:flex; justify-content:space-between;align-items:center;padding:15px 90px 0 90px">
                <p style="font-weight:600">Team A Score</p>
                <p style="font-weight:600">Team B Score</p>
            </div>
        </div>
        <br />
        <div class="row" style="display:flex; justify-content:space-between">
            <div class="col-md-3">
                <div class="form-group">
                    <input placeholder="Score" asp-for="Score" class="form-control" />
                    <span asp-validation-for="Score" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input placeholder="Wickets" class="form-control" />
                    <span asp-validation-for="Score" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input placeholder="Over.Balls" class="form-control" />
                    <span asp-validation-for="Score" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-group">
                    <input placeholder="Score" asp-for="Score" class="form-control" />
                    <span asp-validation-for="Score" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input placeholder="Wickets" class="form-control" />
                    <span asp-validation-for="Score" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input placeholder="Over.Balls" class="form-control" />
                    <span asp-validation-for="Score" class="text-danger"></span>
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="WinningTeam" class="control-label">Winning Team</label>
                    <select id="WinningTeam" asp-for="WinningTeam" class="form-control">
                        <option>Select</option>
                        <option value="Right-arm Fast">Right-arm Fast</option>
                        <option value="Left-arm Fast">Left-arm Fast</option>
                        <option value="Right-arm Medium">Right-arm Medium</option>
                        <option value="Left-arm Medium">Left-arm Medium</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <input placeholder="Team A Won by 00 Runs..." class="form-control" ></input>
                </div>
            </div>
        </div>
        <br />

        <div class="row">
            <div class="col-md-4">
                <div class="form-group" style="display:flex; justify-content:center">
                    <input type="submit" value="Finish Match" class="btn btn-primary" />
                </div>
            </div>
        </div>

    </form>


</body>

@{
    var alertMessage = TempData["AlertMessage"] as string;
}

@if (!string.IsNullOrEmpty(alertMessage))
{
    <script>
        alert('@alertMessage');
    </script>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
