@model CricketWebApplicationMVC.Models.AddTeamModel

@{
    ViewData["Title"] = "AddTeam";
}

<style>
    .row {
        place-content: center;
        padding: 5px;
    }

    form {
        border-radius: 10px;
        padding: 15px;
    }

    .btn {
        width: 90%;
    }

    
    .col-md-3{
        margin:5px;
    }

    .suggestions-box {
        background-color: black;
        border-radius: 5px;
        padding: 10px;
        max-height: 150px;
        width: 100%;
        overflow-y: auto;
    }

    .suggestion-item {
        color: white;
        cursor: pointer;
        padding: 5px 10px 5px 10px;
        border-bottom: 1px solid #333;
        font-size:16px;
        display: flex;
        justify-content: space-between;
    }

        .suggestion-item:hover {
            background-color: #333;
            border-radius:5px;
        }

    .input-group-append{
       
    }

    .clear-input{
        background-color:#fff;
    }

    .clear-input:hover{
        background-color:aliceblue;
        cursor:pointer;
    }

</style>


<center>
    <h2>Add Team</h2>
</center>

<hr />

<form asp-action="AddTeam" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="TeamName" class="control-label">Team Name</label>
                <input asp-for="TeamName" class="form-control" />
                <span asp-validation-for="TeamName" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="TeamLogo" class="control-label">Team Logo</label>
                <input type="file" name="UploadImg" accept="image/png, image/jpg, image/jpeg, image/WEBP" id="TeamLogo" asp-for="TeamLogo" class="form-control" onchange="document.getElementById('blah').src = window.URL.createObjectURL(this.files[0])" />
                <span asp-validation-for="TeamLogo" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-2">
            <div class="form-group">
                <img id="blah" alt="Team Logo" height="100px" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
           
                <div class="form-group">
                    <label class="control-label">Player Names</label>

                <div class="row">
                    <div class="col-md-3">
                        <div class="input-group">
                            <input id="playerNameInput" asp-for="Player1" placeholder="Player 1"  class="form-control" style="border-radius: 4px;" />
                            <div class="input-group-append">
                                <span class="input-group-text clear-input">&times;</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="input-group">
                            <input id="playerNameInput" asp-for="Player2" placeholder="Player 2" class="form-control" style="border-radius: 4px;" />
                            <div class="input-group-append">
                                <span class="input-group-text clear-input">&times;</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="input-group">
                            <input id="playerNameInput" asp-for="Player3" placeholder="Player 3" class="form-control" style="border-radius: 4px;" />
                            <div class="input-group-append">
                                <span class="input-group-text clear-input">&times;</span>
                            </div>
                        </div>
                    </div> 
                </div>

                <div class="row">
                    <div class="col-md-3">
                        <div class="input-group">
                            <input id="playerNameInput" asp-for="Player4" placeholder="Player 4" class="form-control" style="border-radius: 4px;" />
                            <div class="input-group-append">
                                <span class="input-group-text clear-input">&times;</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="input-group">
                            <input id="playerNameInput" asp-for="Player5" placeholder="Player 5" class="form-control" style="border-radius: 4px;" />
                            <div class="input-group-append">
                                <span class="input-group-text clear-input">&times;</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="input-group">
                            <input id="playerNameInput" asp-for="Player6" placeholder="Player 6" class="form-control" style="border-radius: 4px;" />
                            <div class="input-group-append">
                                <span class="input-group-text clear-input">&times;</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3">
                        <div class="input-group">
                            <input id="playerNameInput" asp-for="Player7" placeholder="Player 7" class="form-control" style="border-radius: 4px;" />
