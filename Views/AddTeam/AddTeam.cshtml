                            <input id="playerNameInput" asp-for="Player8" placeholder="Player 8" class="form-control" style="border-radius: 4px;" />
                            <div class="input-group-append">
                                <span class="input-group-text clear-input">&times;</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="input-group">
                            <input id="playerNameInput" asp-for="Player9" placeholder="Player 9" class="form-control" style="border-radius: 4px;" />
                            <div class="input-group-append">
                                <span class="input-group-text clear-input">&times;</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3">
                        <div class="input-group">
                            <input id="playerNameInput" asp-for="Player10" placeholder="Player 10" class="form-control" style="border-radius: 4px;" />
